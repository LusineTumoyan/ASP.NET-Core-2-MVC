@model IEnumerable<BusinessLayer.Person>
@{
    ViewBag.Title = "All People";
    Layout = "_Layout";
}
<br/>
<br/>
@if (Model.Count() == 0)
{
    <div class="text-center m-2">
        <p>Database is empty</p>
    </div>
}
else
{
    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-center" style="font-size:18px">Name</th>
            <th class="text-center" style="font-size:18px">Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-action="Info" asp-route-id="@(item.Id)">@item.FirstName  @item.LastName</a></td>
                <td class="text-center">
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-Id="@item.Id">
                            Edit
                        </a>
                        <input type="hidden" name="ID" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Person</a>
</div>
